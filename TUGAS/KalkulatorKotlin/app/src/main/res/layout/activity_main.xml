<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/box">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.622"
        app:layout_constraintTop_toBottomOf="@+id/jumlahkan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold" android:textSize="36sp"
        android:text="Hasil"
        android:id="@+id/hasil"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bil1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="96dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bil1"
        android:id="@+id/bil2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="44dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="95dp"
        app:layout_constraintTop_toBottomOf="@+id/bil2"
        android:text="Jumlahkan"
        android:id="@+id/jumlahkan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:background="@drawable/subround"
        app:layout_constraintHorizontal_bias="0.274"/>

    <Button
        android:layout_height="49dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toBottomOf="@+id/bil2"
        android:text="Kurangi"
        android:id="@+id/kurangi"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/subround"
        app:layout_constraintStart_toEndOf="@+id/jumlahkan"
        android:layout_marginLeft="52dp"/>

    <Button
        android:layout_height="53dp"
        android:layout_width="103dp"
        app:layout_constraintTop_toBottomOf="@+id/jumlahkan"
        android:text="Bagi"
        android:id="@+id/bagi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.134"
        android:layout_marginLeft="48dp"
        android:background="@drawable/subround"/>

    <Button
        android:layout_height="47dp"
        android:layout_width="99dp"
        app:layout_constraintTop_toBottomOf="@+id/kurangi"
        android:text="Kali"
        android:id="@+id/kali"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintHorizontal_bias="0.46"
        android:background="@drawable/subround"
        app:layout_constraintStart_toEndOf="@+id/bagi"/>

</androidx.constraintlayout.widget.ConstraintLayout>