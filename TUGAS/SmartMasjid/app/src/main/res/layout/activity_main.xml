<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="40dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="JADWAL SHOLAT" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Shubuh :" />
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="Hello World!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Dzuhur :" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:text="Hello World!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Ashar :" />
            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:text="Hello World!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Maghrib :" />
            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:text="Hello World!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Isya' :" />
            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:text="Hello World!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Dhuha :" />
            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="Hello World!" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round"
        android:layout_margin="20dp"
        android:padding="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Update"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/edit_shubuh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Shubuh"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edit_dhuhur"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Dhuhur"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_ashar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Ashar"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_maghrib"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Maghrib"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_isha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Isha"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_dhuha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Dhuha"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnUpdate_jadwal"
            android:layout_marginTop="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update"
            android:textColor="#fff"
            android:background="@drawable/subsubround"/>
    </LinearLayout>
        <Button
            android:id="@+id/btnBack_home2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="HOME"
            android:background="@drawable/round"/>

    </LinearLayout>

</ScrollView>