<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tambahdata"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Update"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Form Tambah Data"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editNama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:hint="Nama Penduduk"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edittl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Tempat Tanggal Lahir"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edithp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Nomor Handphone"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/editalamat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="Alamat Penduduk"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tambah Data"
            android:layout_gravity="center"/>





    </LinearLayout>
    <Button
        android:id="@+id/btnkembali"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kembali"
        android:layout_gravity="center"/>
</LinearLayout>